contract Attack  {

    MagicNum magic;
    constructor(MagicNum _magic)public {
        magic =_magic;
    }
    function attack()public{
        bytes memory code = "\x60\x0a\x60\x0c\x60\x00\x39\x60\x0a\x60\x00\xf3\x60\x2a\x60\x80\x52\x60\x20\x60\x80\xf3";
